{
    "name": "lekoala/silverstripe-email-templates",
    "description": "Adds email-templates in the SilverStripe CMS",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "email-templates",
        "email",
        "templates",
        "module",
        "cms"
    ],
    "license": "MIT",
    "authors": [{
        "name": "LeKoala",
        "email": "thomas@lekoala.be"
    }],
    "require": {
        "php": ">=8.3",
        "silverstripe/framework": "^6",
        "silverstripe/siteconfig": "^6",
        "silverstripe/admin": "^3",
        "egulias/email-validator": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "phpstan/phpstan": "^2",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "extra": {
        "installer-name": "email-templates",
        "expose": [
            "images"
        ]
    },
    "support": {
        "issues": "https://github.com/lekoala/silverstripe-email-templates/issues"
    },
    "scripts": {
        "stan": [
            "Composer\\Config::disableProcessTimeout",
            "./vendor/bin/phpstan analyze --memory-limit=1G"
        ],
        "lint": "phpcs src/ tests/",
        "lint-clean": "phpcbf src/ tests/",
        "test": "phpunit -v"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true
        }
    }
}
